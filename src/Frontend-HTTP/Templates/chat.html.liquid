<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Smuxi</title>
    <link rel="stylesheet" type="text/css" href="/static/style.css" />
    <script type="text/javascript" src="/static/smuxi.js"></script>
  </head>
  <body>
    <form action="{{ chat_index | escape }}/message" method="post">
      <p>
        <input type="text" name="message" id="message-input" />
        <button type="submit" id="message-submit">Send</button>
      </p>
    </form>
    <section id="message-field">
      <section id="messages">
      </section>
      <section id="participants">
        <ul>
          {% for user in chat.users %}
          <li>{{ user }}</li>
          {% endfor %}
        </ul>
      </section>
    </section>
    <script type="text/javascript">
      Smuxi.initMessageRefresh();
    </script>
  </body>
</html>
